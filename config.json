{
	"paths": {
		"src": {
			"pages": "src/pages/",
			"scripts": "src/scripts/",
			"styles": "src/styles/",
			"images": "src/images/"
		},
		"dest": {
			"pages": "docs/",
			"scripts": "docs/scripts/",
			"styles": "docs/styles/",
			"images": "docs/images/",
			"sourcemaps": "../maps"
		}
	},

	"sassConfig": {
		"prod": {
			"outputStyle": "compressed"
		},
		"dev": {}
	},

	"resize": {
		"rules": {
			"jonah-with-birds.png": [{
				"width": 500,
				"rename": {
					"suffix": "-small",
					"extname": ".jpg"
				}
			},
			{
				"width": 1000,
				"rename": {
					"suffix": "-medium",
					"extname": ".jpg"
				}
			},
			{
				"width": 2000,
				"rename": {
					"suffix": "-large",
					"extname": ".jpg"
				} 
			}, 
			{
				"width": 3000,
				"rename": {
					"suffix": "-xlarge",
					"extname": ".jpg"
				}
			}]
		},

		"options": {
			"withoutEnlargement": true,
			"errorOnUnusedImage": false,
			"passThroughUnused": true
		}
	}
}